            <colspec colnum="2" colname="c2"/>
            <colspec colnum="3" colname="c3"/>
            <tbody>
              <row>
                <entry namest="c1" nameend="c3"><emphasis effect="bold">9. Analytical Geometry</emphasis></entry>
